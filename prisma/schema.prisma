generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  student      Student?
  mentor       Mentor?
  profileRoles ProfileRole[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  createdBy    String?
  updatedBy    String
}

model Student {
  id          Int      @id @default(autoincrement())
  studentName String
  class       Int
  profileId   Int      @unique
  profile     Profile  @relation(fields: [profileId], references: [id])
  mentorId    Int?
  mentor      Mentor?  @relation(fields: [mentorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  updatedBy   String?
}

model Mentor {
  id          Int       @id @default(autoincrement())
  mentorName  String
  mentorPhone BigInt
  class       Int
  profileId   Int       @unique
  profile     Profile   @relation(fields: [profileId], references: [id])
  students    Student[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdBy   String?
  updatedBy   String?
}

model Role {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  profileRoles ProfileRole[]
}

model ProfileRole {
  profileId Int
  roleId    Int
  profile   Profile @relation(fields: [profileId], references: [id])
  role      Role    @relation(fields: [roleId], references: [id])

  @@id([profileId, roleId])
}

model Class {
  id        Int      @id @default(autoincrement())
  standard  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
  updatedBy String?
}
